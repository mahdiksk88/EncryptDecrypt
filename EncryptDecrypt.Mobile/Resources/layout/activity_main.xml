<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    >

    <TextView
        android:text="Decrypted/Input Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDecrypted"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/lblDecrypted"
        android:id="@+id/txtEncrypt" />
    <TextView
        android:text="Enter The Encryption Key"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEncrypt"
        android:id="@+id/lblEncryptionKey" />
    <EditText
        android:layout_width="143.6dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lblEncryptionKey"
        android:id="@+id/txtEncryptionKey"
        android:layout_marginRight="1.1dp" />
    <TextView
        android:text="Encrypted/Output Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtEncryptionKey"
        android:id="@+id/lblEncrypt" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/lblEncrypt"
        android:id="@+id/txtDecrypt" />
    <Button
        android:text="Start Text Encryption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDecrypt"
        android:id="@+id/btnEncrypted"
        android:backgroundTint="#ff4a148c" />
    <Button
        android:text="Start Text Decryption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnEncrypted"
        android:id="@+id/btnDecrypt"
        android:background="#ff1a237e" />

</RelativeLayout>